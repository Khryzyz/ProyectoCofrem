<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txvReportCierreLoteClaveDispositivoTitle"
        style="@style/StyleTextPrimaryLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/appMarginBottom"
        android:text="@string/report_text_title_cierre_lote" />

    <TextView
        android:id="@+id/txvReportCierreLoteClaveDispositivoClave"
        style="@style/StyleTextPrimaryMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txvReportCierreLoteClaveDispositivoTitle"
        android:layout_marginBottom="@dimen/appMarginBottom"
        android:text="@string/report_text_ingeresar_clave_dispositivo" />

    <EditText
        android:id="@+id/edtReportCierreLoteClaveDispositivoContenidoClave"
        style="@style/StylePassPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txvReportCierreLoteClaveDispositivoClave"
        android:layout_marginBottom="@dimen/appMarginBottom" />

    <Button
        android:id="@+id/btnReportCierreLoteClaveDispositivoBotonCancelar"
        style="@style/StyleButtonCancel"
        android:layout_alignParentStart="true"
        android:layout_below="@id/edtReportCierreLoteClaveDispositivoContenidoClave"
        android:text="@string/general_text_button_cancelar" />

    <Button
        android:id="@+id/btnReportCierreLoteClaveDispositivoBotonAceptar"
        style="@style/StyleButtonAccept"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/edtReportCierreLoteClaveDispositivoContenidoClave"
        android:text="@string/general_text_button_aceptar" />


</RelativeLayout>